{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
  "types": ["svelte", "node"],
  "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "svelte-custom.d.ts"]
}